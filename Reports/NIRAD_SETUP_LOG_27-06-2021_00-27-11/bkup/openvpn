config openvpn 'client'
     option client '1'
     option dev 'tun'
     option resolv_retry 'infinite'
     option nobind '1'
     option persist_key '1'
     option persist_tun '0'
     option user 'nobody'
     option verb '3'
     option cipher 'AES-128-CBC'
     option key_direction '1'
     option remote_cert_tls 'server'
     option tls_auth '/etc/openvpn/ta.key'
     option ca '/etc/openvpn/ca.crt'
     option tun_mtu '9000'
     option mssfix '0'
     option enabled '1'
     option nice '-20'
     option txqueuelen '60000'
     option sndbuf '32000000'
     option rcvbuf '32000000'
     option connect_retry '5 1'
     option ncp_disable '1'
     option fragment '0'
     option engine 'dynamic'
     option port '1194'
     option cert '/etc/openvpn/QA_Team_1.crt'
     option key '/etc/openvpn/QA_Team_1.key'
     option remote 'openvpn.dnsdojo.com'
     option proto 'tcp'
     option auth 'SHA256'
     option tcp-nodelay 
     option compress ''
     option comp-lzo 'no'
  
  
